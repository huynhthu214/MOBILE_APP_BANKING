<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA"
    tools:context=".ui.account.AdminDetailUserActivity">

    <!-- Header Include -->
    <include
        android:id="@+id/layoutHeader"
        layout="@layout/header_admin"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Blue Background -->
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#0b5394"/>

            <!-- Main Profile Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-80dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <!-- Avatar -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/avatar_container"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="2dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/img_user_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_user"
                            android:scaleType="centerCrop"
                            android:background="#E0E0E0"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>

                    <!-- Edit Button -->
                    <ImageView
                        android:id="@+id/btn_action_edit"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_edit"
                        android:padding="8dp"
                        android:elevation="4dp"
                        android:background="@drawable/bg_circle_light"
                        android:backgroundTint="#0b5394"
                        app:tint="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="@id/avatar_container"
                        app:layout_constraintEnd_toEndOf="@id/avatar_container"
                        android:clickable="true"
                        android:focusable="true"
                        tools:ignore="ContentDescription" />

                    <!-- User Name -->
                    <TextView
                        android:id="@+id/tv_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        tools:text="Nguyễn Văn A"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        app:layout_constraintTop_toBottomOf="@id/avatar_container"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Status Chips -->
                    <LinearLayout
                        android:id="@+id/status_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tv_detail_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/tv_status_verify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã xác thực"
                            android:textSize="12sp"
                            android:textColor="#2563EB"
                            android:background="@drawable/bg_chip_outline"
                            android:backgroundTint="#EFF6FF"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>

                        <TextView
                            android:id="@+id/tv_status_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Hoạt động"
                            android:textSize="12sp"
                            android:textColor="#16A34A"
                            android:background="@drawable/bg_chip_outline"
                            android:backgroundTint="#F0FDF4"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>
                    </LinearLayout>

                    <!-- Balance Section -->
                    <LinearLayout
                        android:id="@+id/balance_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#F9FAFB"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/status_container">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng số dư khả dụng"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>

                        <TextView
                            android:id="@+id/tv_total_balance_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="12,500,000 VND"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Info Rows -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@id/balance_container">

                        <!-- Phone -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">
                            <TextView
                                android:text="Điện thoại:"
                                android:textColor="#6B7280"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_detail_phone"
                                tools:text="0912 345 678"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F3F4F6"/>

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">
                            <TextView
                                android:text="Email:"
                                android:textColor="#6B7280"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_detail_email"
                                tools:text="nguyenvana@gmail.com"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F3F4F6"/>

                        <!-- Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">
                            <TextView
                                android:text="Ngày tạo:"
                                android:textColor="#6B7280"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_detail_date"
                                tools:text="01/01/2024"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- List Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách tài khoản sở hữu"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <!-- List of Accounts -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_user_accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="16dp"
                android:paddingBottom="24dp"
                tools:listitem="@layout/item_admin_account_card"
                tools:itemCount="3"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>