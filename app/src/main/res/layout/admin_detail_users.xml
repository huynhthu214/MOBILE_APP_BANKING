<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/header_admin"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#0b5394"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-80dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/img_user_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_user"
                            android:scaleType="centerCrop"
                            android:background="#E0E0E0"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Nguyễn Văn A"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#111827"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_status_verify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đã xác thực"
                            android:textSize="12sp"
                            android:textColor="#2563EB"
                            android:background="@drawable/bg_chip_outline"
                            android:backgroundTint="#EFF6FF"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>
                        <TextView
                            android:id="@+id/tv_status_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Hoạt động"
                            android:textSize="12sp"
                            android:textColor="#16A34A"
                            android:background="@drawable/bg_chip_outline"
                            android:backgroundTint="#F0FDF4"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="#F9FAFB"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng tài sản"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>

                        <TextView
                            android:id="@+id/tv_detail_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12,500,000 VND"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#111827"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">
                            <TextView android:text="Điện thoại:" android:textColor="#6B7280" android:layout_width="100dp" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tv_detail_phone" android:text="0912 345 678" android:textColor="#111827" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F3F4F6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">
                            <TextView android:text="Email:" android:textColor="#6B7280" android:layout_width="100dp" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tv_detail_email" android:text="nguyenvana@gmail.com" android:textColor="#111827" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F3F4F6"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">
                            <TextView android:text="Ngày tạo:" android:textColor="#6B7280" android:layout_width="100dp" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tv_detail_date" android:text="01/01/2024" android:textColor="#111827" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:useDefaultMargins="true"
                android:alignmentMode="alignMargins"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_action_lock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FEF2F2"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView android:src="@drawable/ic_lock" app:tint="#DC2626" android:layout_width="24dp" android:layout_height="24dp"/>
                        <TextView android:text="Khóa TK" android:textColor="#DC2626" android:textStyle="bold" android:textSize="12sp" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_action_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#EFF6FF"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:id="@+id/edit_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit"
                            app:tint="#2563EB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Sửa thông tin"
                            android:textColor="#2563EB"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_action_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFF7ED"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView android:src="@drawable/ic_refresh" app:tint="#EA580C" android:layout_width="24dp" android:layout_height="24dp"/>
                        <TextView android:text="Cấp lại MK" android:textColor="#EA580C" android:textStyle="bold" android:textSize="12sp" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử giao dịch gần đây"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111827"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_user_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="16dp"
                android:paddingBottom="24dp"
                tools:listitem="@layout/item_transaction_placeholder"
                tools:itemCount="3"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>