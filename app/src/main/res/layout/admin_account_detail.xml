<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA">

    <!-- Header giữ nguyên -->
    <include layout="@layout/header_admin" android:id="@+id/layoutHeader"/>

    <!-- Phần nội dung cuộn (Scroll) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card 1: Thông tin số dư (Màu xanh đậm) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#0b5394">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            app:tint="#BBDEFB"/>

                        <TextView
                            android:id="@+id/tv_detail_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="CHECKING ACCOUNT"
                            android:textColor="#BBDEFB"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_detail_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="9901 2234 5678"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.05"
                        android:textSize="26sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#40FFFFFF"
                        android:layout_marginVertical="16dp"/>

                    <TextView
                        android:id="@+id/tv_balance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số dư hiện tại"
                        android:textColor="#BBDEFB"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_detail_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="50,000,000 VND"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Thông tin chi tiết (Màu trắng) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin chi tiết"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0b5394" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F3F4F6" android:layout_marginTop="12dp" android:layout_marginBottom="16dp"/>

                    <!-- Item 1 -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="4dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Chủ tài khoản" android:textColor="#6B7280"/>
                        <TextView android:id="@+id/tv_detail_owner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NGUYEN VAN A" android:textStyle="bold" android:textColor="#111827" android:textSize="15sp"/>
                    </LinearLayout>

                    <!-- Item 2 -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="12dp" android:paddingVertical="4dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Trạng thái" android:textColor="#6B7280"/>
                        <TextView android:id="@+id/tv_detail_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ACTIVE" android:textColor="#16A34A" android:background="#E6F4EA" android:paddingHorizontal="8dp" android:paddingVertical="2dp" android:textStyle="bold" android:textSize="13sp"/>
                    </LinearLayout>

                    <!-- Item 3 -->
                    <LinearLayout
                        android:id="@+id/layout_rate_row"
                        android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="12dp" android:paddingVertical="4dp">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Lãi suất áp dụng" android:textColor="#6B7280"/>
                        <TextView android:id="@+id/tv_detail_rate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.5% / năm" android:textColor="#111827" android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- THANH BOTTOM CỐ ĐỊNH CHỨA NÚT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:elevation="20dp"
        android:padding="16dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_lock_account"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Khóa tài khoản"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#DC2626"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_lock_power_off"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconTint="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>