<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F4F6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/img_trans_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_bill"
                app:tint="#4B5563" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_trans_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#GD100245"
            android:textStyle="bold"
            android:textColor="#111827"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/card_icon_container"
            app:layout_constraintTop_toTopOf="@id/card_icon_container"/>

        <TextView
            android:id="@+id/tv_trans_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" • 10:30 12/03"
            android:textSize="12sp"
            android:textColor="#6B7280"
            app:layout_constraintStart_toEndOf="@id/tv_trans_code"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_trans_code"/>

        <TextView
            android:id="@+id/tv_trans_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2,500,000đ"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#16A34A"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/btn_options"
            app:layout_constraintTop_toTopOf="@id/tv_trans_code"
            app:layout_constraintBottom_toBottomOf="@id/tv_trans_code"/>

        <TextView
            android:id="@+id/tv_trans_users"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A → Trần Thị B"
            android:textSize="13sp"
            android:textColor="#374151"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/tv_trans_code"
            app:layout_constraintEnd_toStartOf="@id/btn_options"
            app:layout_constraintTop_toBottomOf="@id/tv_trans_code"/>

        <TextView
            android:id="@+id/tv_trans_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành công"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#16A34A"
            android:background="@drawable/bg_chip_outline"
            android:backgroundTint="#F0FDF4"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/tv_trans_code"
            app:layout_constraintTop_toBottomOf="@id/tv_trans_users"/>

        <ImageView
            android:id="@+id/btn_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more"
            app:tint="#9CA3AF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>