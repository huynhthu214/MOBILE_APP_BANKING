<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="start">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_noti_bg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="#EFF6FF"/> <ImageView
            android:id="@+id/img_noti_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_bill"
            app:tint="#2563EB"/>

            <View
                android:id="@+id/view_unread_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_circle_red"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:visibility="visible"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tv_noti_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yêu cầu mở khóa tài khoản"
                    android:textColor="#111827"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_noti_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5p trước"
                    android:textColor="#6B7280"
                    android:textSize="11sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_noti_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khách hàng Nguyễn Văn A yêu cầu mở khóa tài khoản do nhập sai mật khẩu quá 5 lần."
                android:textColor="#4B5563"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>