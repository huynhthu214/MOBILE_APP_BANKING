<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/header_admin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edtSearchAccount"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search_outline"
                android:drawableStart="@drawable/ic_card"
                android:drawablePadding="10dp"
                android:hint="Nhập số tài khoản cần tìm..."
                android:paddingHorizontal="16dp"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/btnFilter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_circle_light"
                android:padding="12dp"
                android:src="@drawable/ic_edit"
                app:tint="#0b5394" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAccountsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:paddingBottom="20dp"
            tools:listitem="@layout/item_admin_account_card" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>