<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_acc_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_card"
            android:padding="8dp"
            android:background="@drawable/bg_circle_light"
            app:tint="#0b5394" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_acc_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checking Account"
                android:textColor="#111827"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_acc_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9901234567"
                android:textColor="#6B7280"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_acc_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5,000,000Ä‘"
            android:textColor="#16A34A"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>