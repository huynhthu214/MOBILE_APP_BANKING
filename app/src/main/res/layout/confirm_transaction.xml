<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận giao dịch"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="#111827"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_summary_box"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView android:text="Đến:" android:textColor="#6B7280" android:textSize="14sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/tv_confirm_dest" android:text="Nguyen Van B" android:textStyle="bold" android:textColor="#111827" android:textSize="15sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:text="Tổng tiền:" android:textColor="#6B7280" android:textSize="14sp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/tv_confirm_amount" android:text="5,000,000 VND" android:textStyle="bold" android:textColor="#1D4ED8" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <View android:background="#F3F4F6" android:layout_width="match_parent" android:layout_height="1.5dp" android:layout_marginVertical="24dp"/>

        <TextView
            android:text="Nhập mã PIN"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#374151"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_pin_confirm"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/bg_input_field"
            android:gravity="center"
            android:hint="Mã PIN"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:letterSpacing="0.5"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="16dp"/>

        <TextView
            android:text="Mã Smart OTP"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#374151"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_otp_confirm"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/bg_input_field"
            android:gravity="center"
            android:hint="••••••"
            android:letterSpacing="0.3"
            android:inputType="number"
            android:maxLength="6"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingHorizontal="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btn_cancel_dialog"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="54dp"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="#4B5563"
                android:backgroundTint="#F3F4F6"
                android:layout_marginEnd="8dp"
                app:cornerRadius="12dp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

            <Button
                android:id="@+id/btn_confirm_dialog"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="54dp"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:backgroundTint="#0b5394"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                app:cornerRadius="12dp"
                android:elevation="4dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>