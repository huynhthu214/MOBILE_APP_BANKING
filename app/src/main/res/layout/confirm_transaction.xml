<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận giao dịch"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#111827"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView android:text="Tổng tiền:" android:textColor="#6B7280" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tv_confirm_amount" android:text="5,000,000 VND" android:textStyle="bold" android:textColor="#DC2626" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView android:text="Đến:" android:textColor="#6B7280" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tv_confirm_dest" android:text="Nguyen Van B" android:textStyle="bold" android:textColor="#111827" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <View android:background="#E5E7EB" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginVertical="16dp"/>

        <TextView
            android:text="Nhập mã OTP (Smart OTP)"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_otp_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edittext_rounded"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:hint="*****"
            android:inputType="number"
            android:maxLength="6"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btn_cancel_dialog"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textColor="#6B7280"
                android:backgroundTint="#F3F4F6"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_confirm_dialog"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Xác nhận"
                android:backgroundTint="#2563EB"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>