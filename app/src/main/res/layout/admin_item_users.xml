<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/iv_employee_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user"
                android:background="#E0E0E0"
                android:scaleType="centerCrop"
                android:padding="8dp"
                app:tint="#757575"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_avatar"
            android:layout_toStartOf="@id/layout_tags"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tv_employee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_employee_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 12345678"
                android:textColor="#8A8A8A"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btn_employee_options"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_account_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Hoạt động"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#16A34A"
                android:background="@drawable/bg_chip_outline"
                android:backgroundTint="#F0FDF4"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Thanh toán"
                android:textColor="#2563EB"
                android:textSize="10sp"
                android:textStyle="bold"
                android:background="@drawable/bg_chip_outline"
                android:backgroundTint="#EFF6FF"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_employee_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more"
            app:tint="#BDBDBD"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>