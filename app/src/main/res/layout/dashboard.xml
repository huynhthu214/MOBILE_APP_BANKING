<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- Nội dung chính có thể cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- 1. Thanh tiêu đề (Header) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Xin chào,"
                    android:textColor="#8A8A8A"
                    android:textSize="22sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Siyam Ahmed!"
                    android:textColor="#333333"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_hello"
                    app:layout_constraintEnd_toStartOf="@id/card_search"/>

                <!-- Nút tìm kiếm -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_search"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="22.5dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toStartOf="@id/card_notifications"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#333333" />
                </androidx.cardview.widget.CardView>

                <!-- Nút thông báo -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_notifications"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="22.5dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_popup_reminder"
                        app:tint="#333333" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 2. Thẻ Số dư (Balance Card) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#E6E1FF"> <!-- Màu lavender -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_current_balance_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số dư hiện tại"
                        android:textColor="#5A5A5A"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_current_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="4.520.000 VND"
                        android:textColor="#333333"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_current_balance_label" />

                    <!-- Nút thêm (Add) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_input_add"
                            app:tint="#6A5AED" />
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- 3. Thanh toán sắp tới (Upcoming Payments) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Thanh toán mới nhất"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả"
                    android:textColor="#6A5AED"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Danh sách cuộn ngang cho thanh toán -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Thẻ Adobe (Màu tím) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#6A5AED"> <!-- Màu tím chính -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Hàng biểu tượng và dấu ... -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- Thay thế bằng biểu tượng Adobe -->
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@android:drawable/ic_menu_camera"
                                    app:tint="@android:color/white"
                                    android:layout_alignParentStart="true"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/ic_menu_more"
                                    app:tint="@android:color/white"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Adobe Premium"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="$30/month"
                                android:textColor="#E0E0E0"
                                android:textSize="14sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="2 days left"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Thẻ Apple (Màu trắng) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Hàng biểu tượng và dấu ... -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!-- Thay thế bằng biểu tượng Apple -->
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@android:drawable/sym_def_app_icon"
                                    app:tint="#333333"
                                    android:layout_alignParentStart="true"/>

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@android:drawable/ic_menu_more"
                                    app:tint="#8A8A8A"
                                    android:layout_alignParentEnd="true"/>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Apple Premium"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="$30/month"
                                android:textColor="#8A8A8A"
                                android:textSize="14sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="2 days left"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 4. Giao dịch gần đây (Recent Transactions) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Giao dịch gần đây"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả"
                    android:textColor="#6A5AED"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Danh sách giao dịch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="8dp">

                <!-- Mục 1: Apple Inc. -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Thay thế bằng biểu tượng Apple -->
                    <ImageView
                        android:id="@+id/icon_trans_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/icon_trans_1"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apple Inc."
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21 Sep, 03:02 PM"
                            android:textColor="#8A8A8A"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-$230.50"
                        android:textColor="#FF3B30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <!-- Mục 2: Adobe -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Thay thế bằng biểu tượng Adobe -->
                    <ImageView
                        android:id="@+id/icon_trans_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_camera"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/icon_trans_2"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adobe"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21 Sep, 03:22 PM"
                            android:textColor="#8A8A8A"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-$130.50"
                        android:textColor="#FF3B30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <!-- Mục 3: Amazon -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Thay thế bằng biểu tượng Amazon -->
                    <ImageView
                        android:id="@+id/icon_trans_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/icon_trans_3"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amazon"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21 Sep, 02:02 PM"
                            android:textColor="#8A8A8A"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-$20.50"
                        android:textColor="#FF3B30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

            <!-- Tài khoản -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Các loại tài khoản"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp">
                <!-- Hàng 2: Vay, Tiết kiệm, Thế chấp -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:baselineAligned="false">

                    <!-- Mục 4: Vay -->
                    <LinearLayout
                        android:id="@+id/btn_loan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackground">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="#6A5AED"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Vay"
                            android:textColor="#555555"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <!-- Mục 5: Tiết kiệm -->
                    <LinearLayout
                        android:id="@+id/btn_savings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackground">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_save"
                            app:tint="#6A5AED"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Tiết kiệm"
                            android:textColor="#555555"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <!-- Mục 6: Thế chấp -->
                    <LinearLayout
                        android:id="@+id/btn_mortgage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackground">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            app:tint="#6A5AED"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Thế chấp"
                            android:textColor="#555555"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Tiện ích"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả"
                    android:textColor="#6A5AED"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <!-- Hàng 1: Vé máy bay, Vé phim, Vé xe -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- Mục 1: Vé máy bay -->
                        <LinearLayout
                            android:id="@+id/btn_flight_tickets"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_menu_send"
                                app:tint="#6A5AED"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Vé máy bay"
                                android:textColor="#555555"
                                android:textSize="12sp"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>

                        <!-- Mục 2: Vé xem phim -->
                        <LinearLayout
                            android:id="@+id/btn_movie_tickets"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_media_play"
                                app:tint="#6A5AED"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Vé xem phim"
                                android:textColor="#555555"
                                android:textSize="12sp"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>

                        <!-- Mục 3: Vé xe -->
                        <LinearLayout
                            android:id="@+id/btn_bus_tickets"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_menu_directions"
                                app:tint="#6A5AED"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Vé xe"
                                android:textColor="#555555"
                                android:textSize="12sp"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Hàng 2: Khách sạn, Mua sắm -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="false">

                        <!-- Mục 4: Đặt phòng Khách sạn -->
                        <LinearLayout
                            android:id="@+id/btn_hotel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_menu_mapmode"
                                app:tint="#6A5AED"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Đặt phòng\nKhách sạn"
                                android:textColor="#555555"
                                android:textSize="12sp"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>

                        <!-- Mục 5: Mua sắm Online -->
                        <LinearLayout
                            android:id="@+id/btn_ecommerce"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_menu_search"
                                app:tint="#6A5AED"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Mua sắm\nOnline"
                                android:textColor="#555555"
                                android:textSize="12sp"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>

                        <!-- Mục 6: Trống (để căn lề) -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--
            ====================================================
            == KẾT THÚC PHẦN MỚI THÊM ==
            ====================================================
            -->

            <!--
            ====================================================
            == PHẦN MỚI THÊM (HỖ TRỢ) BẮT ĐẦU TỪ ĐÂY ==
            ====================================================
            -->

            <!-- 7. Hỗ trợ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Hỗ trợ"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="8dp">

                    <!-- Hàng 1: Vị trí chi nhánh, Hỏi đáp -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- Mục 1: Vị trí chi nhánh -->
                        <LinearLayout
                            android:id="@+id/btn_branch_locations"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">

                            <!-- Thay thế bằng biểu tượng bản đồ/vị trí -->
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_dialog_map"
                                app:tint="#6A5AED"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Vị trí\nChi nhánh"
                                android:textColor="#555555"
                                android:textSize="12sp"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>

                        <!-- Mục 2: Hỏi đáp -->
                        <LinearLayout
                            android:id="@+id/btn_faq"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">

                            <!-- Thay thế bằng biểu tượng hỏi đáp/info -->
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_menu_help"
                                app:tint="#6A5AED"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Hỏi đáp"
                                android:textColor="#555555"
                                android:textSize="12sp"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>

                        <!-- Mục 3: Trống (để căn lề) -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/navbarUser"
        layout="@layout/navbar_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="8dp"/>

</FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>