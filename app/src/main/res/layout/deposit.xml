<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#0b5394"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">
        <ImageView
            android:id="@+id/btn_back_deposit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Nạp tiền vào tài khoản"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập số tiền"
                android:textColor="#64748B"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <EditText
                        android:id="@+id/et_deposit_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="0 VND"
                        android:inputType="number"
                        android:textColor="#111827"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:letterSpacing="-0.02"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F1F5F9"
                        android:layout_marginVertical="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_suggest_100"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:text="100.000"
                            android:background="@drawable/bg_chip_outline"
                            android:gravity="center"
                            android:layout_marginEnd="6dp"
                            android:textColor="#334155"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/tv_suggest_200"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:text="200.000"
                            android:background="@drawable/bg_chip_outline"
                            android:gravity="center"
                            android:layout_marginHorizontal="3dp"
                            android:textColor="#334155"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/tv_suggest_500"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="44dp"
                            android:text="500.000"
                            android:background="@drawable/bg_chip_outline"
                            android:gravity="center"
                            android:layout_marginStart="6dp"
                            android:textColor="#334155"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textColor="#64748B"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"/>

            <RadioGroup
                android:id="@+id/rg_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_vnpay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_vnpay"
                            android:scaleType="centerInside"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cổng thanh toán VNPay"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#1E293B"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hỗ trợ ứng dụng ngân hàng, Ví VNPay"
                                android:textSize="12sp"
                                android:textColor="#94A3B8"/>
                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/rb_vnpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:buttonTint="#0b5394"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_stripe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_stripe"
                            android:scaleType="centerInside"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thẻ Quốc tế (Stripe)"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:textColor="#1E293B"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Visa, Mastercard, JCB"
                                android:textSize="12sp"
                                android:textColor="#94A3B8"/>
                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/rb_stripe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="#0b5394"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_footer_shadow"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_confirm_deposit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Tiếp tục"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0b5394"
            app:cornerRadius="16dp"
            android:elevation="4dp"/>
    </LinearLayout>
</LinearLayout>