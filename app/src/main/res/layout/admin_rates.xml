<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0b5394"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_back_rates"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Điều chỉnh lãi suất"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Tài khoản Tiết kiệm (Savings)"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:text="Kỳ hạn 1 tháng"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/et_rate_1m"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:text="3.5"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:textColor="#2563EB"/>

                        <TextView
                            android:text="%/năm"
                            android:layout_marginStart="8dp"
                            android:textColor="#6B7280"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:text="Kỳ hạn 6 tháng"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/et_rate_6m"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:text="5.2"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:textColor="#2563EB"/>

                        <TextView
                            android:text="%/năm"
                            android:layout_marginStart="8dp"
                            android:textColor="#6B7280"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="Kỳ hạn 12 tháng"
                            android:textStyle="bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:id="@+id/et_rate_12m"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:text="6.8"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textStyle="bold"
                            android:textColor="#2563EB"/>

                        <TextView
                            android:text="%/năm"
                            android:layout_marginStart="8dp"
                            android:textColor="#6B7280"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="Lưu ý: Lãi suất mới sẽ áp dụng cho các tài khoản mở mới từ thời điểm cập nhật."
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_update_rates"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:text="Cập nhật Lãi suất"
        android:backgroundTint="#0b5394"
        android:textStyle="bold"
        app:cornerRadius="12dp"/>

</LinearLayout>