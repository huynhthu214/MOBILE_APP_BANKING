<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    android:fitsSystemWindows="true">

    <!-- 1. Thanh AppBar ở trên cùng -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:background="#F5F5F7"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Account Info"
            app:titleTextColor="#333333"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="#333333" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2. Nội dung cuộn -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 3. Thẻ thông tin tài khoản chung -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_account_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking Account"
                        android:textColor="#6A5AED"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_account_holder_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Siyam Ahmed"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_account_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="**** **** **** 1234"
                        android:textColor="#8A8A8A"
                        android:textSize="16sp"
                        android:fontFamily="monospace"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 4. Thẻ chi tiết (Thay đổi theo loại tài khoản) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- MỤC A: CHO TÀI KHOẢN THANH TOÁN (CHECKING) -->
                    <LinearLayout
                        android:id="@+id/layout_checking_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available Balance"
                            android:textColor="#8A8A8A"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_checking_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-black"
                            android:text="$4,570.80"
                            android:textColor="#333333"
                            android:textSize="34sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- MỤC B: CHO TÀI KHOẢN TIẾT KIỆM (SAVING) -->
                    <!-- Đặt visibility="visible" và ẩn mục A để xem trước -->
                    <LinearLayout
                        android:id="@+id/layout_saving_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Số dư -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Account Balance"
                                android:textColor="#8A8A8A"
                                android:textSize="16sp"
                                android:layout_alignParentStart="true"/>
                            <TextView
                                android:id="@+id/tv_saving_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$10,000.00"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>

                        <!-- Lãi suất -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profitable Rate"
                                android:textColor="#8A8A8A"
                                android:textSize="16sp"
                                android:layout_alignParentStart="true"/>
                            <TextView
                                android:id="@+id/tv_saving_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5.5% p.a."
                                android:textColor="#00B16A"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>

                        <!-- Lợi nhuận/tháng -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Est. Profit / Month"
                                android:textColor="#8A8A8A"
                                android:textSize="16sp"
                                android:layout_alignParentStart="true"/>
                            <TextView
                                android:id="@+id/tv_saving_profit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$45.83"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <!-- MỤC C: CHO TÀI KHOẢN THẾ CHẤP (MORTGAGE) -->
                    <!-- Đặt visibility="visible" và ẩn mục A, B để xem trước -->
                    <LinearLayout
                        android:id="@+id/layout_mortgage_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Số tiền phải trả -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount to Pay (Monthly)"
                                android:textColor="#8A8A8A"
                                android:textSize="16sp"
                                android:layout_alignParentStart="true"/>
                            <TextView
                                android:id="@+id/tv_mortgage_payment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$1,250.00"
                                android:textColor="#FF3B30"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>

                        <!-- Ngày trả tiếp theo -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Next Payment Due"
                                android:textColor="#8A8A8A"
                                android:textSize="16sp"
                                android:layout_alignParentStart="true"/>
                            <TextView
                                android:id="@+id/tv_mortgage_due_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dec 1, 2025"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 5. Hành động nhanh (Yêu cầu: Nạp/Rút) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Quick Actions"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <!-- Mục 1: Nạp tiền (Deposit) -->
                    <LinearLayout
                        android:id="@+id/btn_deposit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackground">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_input_add"
                            app:tint="#6A5AED"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Deposit"
                            android:textColor="#555555"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <!-- Mục 2: Rút tiền (Withdraw) -->
                    <LinearLayout
                        android:id="@+id/btn_withdraw"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?selectableItemBackground">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_upload"
                            app:tint="#6A5AED"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Withdraw"
                            android:textColor="#555555"
                            android:textSize="12sp"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 6. Lịch sử giao dịch (Yêu cầu) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Recent Transactions"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <!-- LƯU Ý: Đây NÊN là một RecyclerView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/list_transactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Mục 1 (Ví dụ) -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/icon_trans_1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/sym_def_app_icon"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/icon_trans_1"
                            android:layout_centerVertical="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apple Inc."
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="21 Sep, 03:02 PM"
                                android:textColor="#8A8A8A"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-$230.50"
                            android:textColor="#FF3B30"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <!-- Mục 2 (Ví dụ) -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/icon_trans_2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/icon_trans_2"
                            android:layout_centerVertical="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amazon"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="21 Sep, 02:02 PM"
                                android:textColor="#8A8A8A"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-$20.50"
                            android:textColor="#FF3B30"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>