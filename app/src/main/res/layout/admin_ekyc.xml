<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ================= HEADER ================= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duyệt KYC"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#111827"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 yêu cầu đang chờ duyệt"
            android:textSize="13sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp"/>

        <!-- ================= STATS ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="3">

            <!-- Chờ duyệt -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#EEF2FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:text="3"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4F46E5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Chờ duyệt"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Đã duyệt -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#ECFDF5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:text="45"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#059669"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Đã duyệt"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Từ chối -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FEF2F2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:text="12"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#DC2626"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Từ chối"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- ================= KYC CARD ================= -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- User -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_user"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:text="Nguyễn Văn A"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#111827"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="12/12/2024 10:30"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:text="Chờ duyệt"
                        android:textSize="12sp"
                        android:textColor="#4F46E5"
                        android:background="#EEF2FF"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:text="CMND/CCCD - mặt trước"
                            android:textSize="10sp"
                            android:textColor="#6B7280"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/bg_status_locked"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:text="CMND/CCCD - mặt sau"
                            android:textSize="10sp"
                            android:textColor="#6B7280"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/bg_status_locked"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>
                </LinearLayout>

                <!-- Info -->
                <TextView
                    android:text="Số CCCD: 012345678901"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:textColor="#374151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Họ tên: Nguyễn Văn A"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Ngày sinh: 01/01/2000"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Địa chỉ: 123 Lê Lợi, Q1, TP.HCM"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Duyệt"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#16A34A"/>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Từ chối"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#DC2626"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- User -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_user"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:text="Nguyễn Văn A"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#111827"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="12/12/2024 10:30"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:text="Chờ duyệt"
                        android:textSize="12sp"
                        android:textColor="#4F46E5"
                        android:background="#EEF2FF"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:text="CMND/CCCD - mặt trước"
                            android:textSize="10sp"
                            android:textColor="#6B7280"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/bg_status_locked"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:text="CMND/CCCD - mặt sau"
                            android:textSize="10sp"
                            android:textColor="#6B7280"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:src="@drawable/bg_status_locked"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>
                </LinearLayout>

                <!-- Info -->
                <TextView
                    android:text="Số CCCD: 012345678901"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:textColor="#374151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Họ tên: Nguyễn Văn A"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Ngày sinh: 01/01/2000"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Địa chỉ: 123 Lê Lợi, Q1, TP.HCM"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Duyệt"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#16A34A"/>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Từ chối"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#DC2626"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
