<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FA"
    tools:context=".ui.dashboard.HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="64dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="#0b5394"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xin chào,"
                    android:textColor="#BBDEFB"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Nguyen Van A"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="-60dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ZY BANK"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Số dư khả dụng"
                        android:textColor="#6B7280"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,000,000 VND"
                        android:textColor="#111827"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/tv_account_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**** **** **** 4589"
                        android:textColor="#9CA3AF"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_deposit"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Nạp tiền"
                            android:textSize="12sp"
                            android:backgroundTint="#EFF6FF"
                            android:textColor="#2563EB"
                            android:stateListAnimator="@null"
                            app:elevation="0dp"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btn_withdraw"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#0b5394"
                            android:text="Rút tiền"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiện ích và Dịch vụ"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp">
                    <TextView
                        android:id="@+id/tv_view_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm"
                        android:textSize="12sp"
                        android:textColor="#777"/>
                    <ImageView
                        android:layout_marginStart="3dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_next"/>
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:layout_margin="24dp"
                android:alignmentMode="alignMargins">

                <LinearLayout
                    android:id="@+id/btn_electricity"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tv_electric"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#DBEAFE"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điện"
                        android:textSize="12sp"
                        android:textColor="#111827"
                        android:layout_marginTop="6dp"/>
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_water"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tv_water"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#E0E7FF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nước"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_phone"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tv_phone"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#DCFCE7"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điện thoại"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_tickets"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tv_tickets"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#FEF3C7"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua vé"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

            </GridLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_savings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Tài khoản tiết kiệm"
                            android:textSize="13sp"
                            android:textColor="#6B7280"/>
                        <ImageView
                            android:src="@drawable/ic_next"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:tint="#6B7280"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_saving_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,500,000 VND"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:layout_marginTop="6dp"/>
                    <TextView
                        android:id="@+id/tv_saving_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lãi suất: 4.5% / năm"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_mortgage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Khoản vay thế chấp"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />
                        <ImageView
                            android:src="@drawable/ic_next"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:tint="#6B7280"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cần thanh toán:"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/tv_mortgage_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12,000,000 VND"
                        android:textColor="#DC2626"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giao dịch gần đây"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_transactions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_transaction_placeholder"
                        tools:itemCount="3"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_location"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/location"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="#2563EB"/>
                        <TextView
                            android:text="Tìm ATM/Chi nhánh"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_ekyc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/ic_face"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="#F59E0B"/>
                        <TextView
                            android:text="Xác thực eKYC"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/navbar_user"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>